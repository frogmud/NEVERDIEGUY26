{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "@ndg/shared": ["../packages/shared/src"],
      "@ndg/shared/*": ["../packages/shared/src/*"],
      "@ndg/ai-engine": ["../packages/ai-engine/src"],
      "@ndg/ai-engine/*": ["../packages/ai-engine/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
